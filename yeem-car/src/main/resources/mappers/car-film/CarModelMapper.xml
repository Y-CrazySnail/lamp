<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yeem.car.mapper.CarModelMapper">

    <select id="list" resultType="com.yeem.car.entity.BaseCarModel">
        select * from base_car_model where delete_flag=0
    </select>

    <select id="getById" resultType="com.yeem.car.entity.BaseCarModel">
        select * from base_car_model where id=#{id} and delete_flag=0
    </select>

    <select id="pages" resultType="com.yeem.car.entity.BaseCarModel" parameterType="map">
        select * from base_car_model where delete_flag=0 limit #{startIndex},#{pageSize}
    </select>

    <update id="removeByBrandId" parameterType="Long">
        update base_car_model set delete_flag=1 where brand_id=#{id}
    </update>
    <update id="updateById" parameterType="com.yeem.car.entity.BaseCarModel">
        update base_car_model set name=#{name},name_en=#{name_en},brand_id=#{brand_id},level_no=#{level_no},create_user=#{create_user},create_time=#{create_time},update_user=#{update_user},update_time=#{update_time} where id=#{id}
    </update>
    <update id="remove" parameterType="Long">
        update base_car_model set delete_flag=1 where id=#{id}
    </update>
</mapper>